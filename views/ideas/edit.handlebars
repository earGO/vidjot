<div class="card container">
    {{#each errors}}
        <div class="alert alert-danger">{{text}}</div>
    {{else}}

    {{/each}}

    <div class="thumbnail caption">
        <h3>Edit Video Idea</h3>
        <form action="/ideas/{{idea._id}}?_method=PUT" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" value="{{idea.title}}">
                <input type="hidden" name="_method" value="PUT">
            </div>
            <div class="form-group">
                <label for="details">Details</label>
                <textarea type="text" class="form-control" name="details">{{idea.details}}</textarea>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
            <a href="/ideas" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>
